# Input type for addUser mutation
input UserInput {
    name: String!
    userName: String!
    password: String!
}

# Return type of addUser mutation
type UserDetails {
    id : ID!
    name: String!
}

#Input type for userLogin query
input Credentials {
    userName: String!
    password: String!
}

type Mutation {
    addUser(newUser: UserInput!): UserDetails
}

type Query {
    authenticateUser(credentials: Credentials!): UserDetails
}